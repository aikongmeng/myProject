<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/modelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:orientation="horizontal"
                android:paddingLeft="8.0dip"
                android:text="选择模式:"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <RadioGroup
                android:id="@+id/rgmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_toRightOf="@+id/modelName"
                android:orientation="horizontal"
                android:paddingLeft="10.0dip" >

                <RadioButton
                    android:id="@+id/rbnative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本地    "
                    android:textColor="#ff000000" />

                <RadioButton
                    android:id="@+id/rbwlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联网 "
                    android:textColor="#ff000000" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rljm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="10.0dip" >

            <TextView
                android:id="@+id/tvdataipbak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解密服务器地址:"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/etjmip"
                android:layout_width="160.0dip"
                android:layout_height="50.0dip"
                android:layout_below="@+id/tvdataipbak"
                android:layout_marginTop="10.0dip"
                android:hint="218.2.6.10"
                android:text="218.2.6.10"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/etjmport"
                android:layout_width="100.0dip"
                android:layout_height="50.0dip"
                android:layout_below="@+id/tvdataipbak"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_toRightOf="@+id/etjmip"
                android:hint="23333"
                android:inputType="number"
                android:text="23333"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlhead"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="10.0dip" >

            <CheckBox
                android:id="@+id/chshowpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="显示头像"
                android:textColor="#ff000000" />

            <RelativeLayout
                android:id="@+id/rlnaset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chshowpic"
                android:layout_marginTop="10.0dip"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tvdataip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像服务器地址:"
                    android:textColor="#ff000000"
                    android:textSize="18.0sp" />

                <EditText
                    android:id="@+id/etip"
                    android:layout_width="160.0dip"
                    android:layout_height="50.0dip"
                    android:layout_below="@+id/tvdataip"
                    android:layout_marginTop="10.0dip"
                    android:hint="218.2.6.10"
                    android:text="218.2.6.10"
                    android:textColor="#ff000000"
                    android:textSize="18.0sp" />

                <EditText
                    android:id="@+id/etport"
                    android:layout_width="100.0dip"
                    android:layout_height="50.0dip"
                    android:layout_below="@+id/tvdataip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_toRightOf="@+id/etip"
                    android:hint="9098"
                    android:inputType="number"
                    android:text="9098"
                    android:textColor="#ff000000"
                    android:textSize="18.0sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.0dip"
            android:layout_marginTop="10.0dip"
            android:lineSpacingMultiplier="1.25"
            android:paddingLeft="8.0dip"
            android:text="说明：模式是软件根据读卡器自动选择的。"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dip" >

            <Button
                android:id="@+id/btnSave"
                android:layout_width="150.0dip"
                android:layout_height="60.0dip"
                android:layout_marginBottom="40.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="15.0dip"
                android:text="保    存"
                android:textAppearance="?android:textAppearanceLarge" />

            <Button
                android:id="@+id/back"
                android:layout_width="150.0dip"
                android:layout_height="60.0dip"
                android:layout_marginBottom="40.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_toRightOf="@+id/btnSave"
                android:text="返   回"
                android:textAppearance="?android:textAppearanceLarge" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>